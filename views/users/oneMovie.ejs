 <% include ../partials/head %>
 <link rel="stylesheet" href="/stylesheet/singleMovie.css">
</head>

<body class="p-0" onload="loadData()">
    <% include ../partials/header %>
    <div class="bg-dark" style="height: 400px "> 
        <img class="w-100 h-100" src="<%= movie.imageURL %>" alt="image hee">
    </div>
    <div class="container-fluid bg-dark">
        <div class="container px-4">
            <div class="text-white row justify-content-center p-3">
                <div class="col-12">
                    <div class="row justify-content-between px-2">
                        <h4> <span class="under"> <%= movie.title %> </span></h4>
                        <h5> <span class="cl text-capitalize"> <%= movie.genre %> </span></h5>
                    </div>
                    <p class="txt-muted" style="line-height: 1.3; font-size: 14px; font-weight: 600"><%= movie.description %>
                    </p>
                    <br>
                    <div class="row justify-content-between">
                        <div class=" col-xs-4 col-4">
                            <h6 class="m-0 mt-5">Opening date </h6>
                            <h6><span class="txt-muted"><%= movie.releasedDate %></span></h6>
                            <h6 class="m-0 mt-3">Running Time </h6>
                            <h6><span class="txt-muted"> 120min</span></h6>
                            <h6 class="m-0 mt-3"> Certificate </h6>
                            <h6><span class="txt-muted"><%= movie.certificate%></span></h6>
                            <h6 class="mt-3"> Rating : <span class="txt-muted"> stas here</span></h6>
                        </div>
                        <div class=" col-xs-6 col-4">
                            <h4> <span class="under"> Show Time: </span> </h4>
                            <h6>Mon - Thur</h6>
                            <ul>
                                <% movie.time.forEach(time=>{ %>
                                <li class="mb-2"><span class="py-1 px-3 rounded btime"
                                        style="font-weight: 600; font-size: 12px"> <%= time %>
                                    </span></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-12 p-4">
                    <a href="/movie/<%= movie._id %>/booked" class="font-weight-bold bottom-div px-3 w-100 btn btns">Booked</a>
                </div>
                <div class="col-md-12 preview mb-3 row justify-content-center p-3">
                    <iframe frameBorder="0" src="https://www.youtube.com/embed/tgbNymZ7vqY">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
    <section class="comingSoon"  style="background: #2f343a">
        <% if(comingSoon.length >= 4){ %>
        <% include ../partials/comingSoonCard %>
        <% } else {%>
        <div class="p-3">
            <h3 class="text-white">No data for comingsoon yet</h3>
            <p class="text-muted">or data found is not up to 4 yet</p>
        </div>
        <% } %>
    </section>
        <% include ../partials/footer %>
    <% include ../partials/script %>
</body>
</html>
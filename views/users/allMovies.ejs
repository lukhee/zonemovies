<% include ../partials/head %>
</head>

    <body class="container-fluild">
        <% include ../partials/header %><section>
            <% include ../partials/carousel %>
            <div class="admin-con">
                <h2> Available Movies </h2>
                <div class="all-movies">
                    <% movies.forEach(movie=>{ %>
                    <div class="movie">
                        <% include ../partials/movieCard %>
                        <div class="submit-btns flex-dsp">
                            <a href="/user/trealer/<%= movie._id %>" class="btns">Trealer</a>
                            <form action="/user/booked" method="POST">
                                <input type="hidden" name="id" value="<%= movie._id %>">
                                <input type="submit" value="Booked" class="btns">
                            </form>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </section>
    </body>
    <% include ../partials/script %>
